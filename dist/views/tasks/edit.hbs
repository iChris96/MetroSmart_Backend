
<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <!-- Form -->
                <h1>Edit Task</h1>
                <form action="/tasks/edit/{{task._id}}" method="POST">
                    <!-- Inputs -->
                    <div class="form-group">
                        <input type="text" name="title" value="{{task.title}}" class="form-control" autofocus>
                    </div>

                    <div class="form-group">
                        <input type="text" name="description" value="{{task.description}}"  class="form-control" autofocus>
                    </div>

                    <!-- Buttom -->
                    <button type="submit" class="btn btn-success btn-block">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>
