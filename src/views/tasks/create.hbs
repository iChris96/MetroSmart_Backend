
<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <!-- Form -->
                <h1>Create Task</h1>
                <form action="/tasks/create" method="POST">
                    <!-- Inputs -->
                    <div class="form-group">
                        <input type="text" name="title" placeholder="Write title" class="form-control" autofocus>
                    </div>

                    <div class="form-group">
                        <input type="text" name="description" placeholder="Write description" class="form-control" autofocus>
                    </div>

                    <!-- Buttom -->
                    <button type="submit" class="btn btn-success btn-block">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>
