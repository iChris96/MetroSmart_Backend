<div class="col-md-6 offset-md-3">
    <div class="card shadow p-3 mb-5 bg-white rounded">
        <div class="card-body">
            <!-- Form -->
            <h1>Generate Trip</h1>
            <form action="/astar" method="POST">
                <!-- Inputs -->
                <div class="form-group">
                    <label for="initial_station">Estacion Inicial</label>
                    <select class="form-control" name="initial_station" id="initial_station">
                            {{#each stopsList}}
                            <option value="{{properties.id}}">{{properties.name}}</option>
                            {{/each}}
                    </select>
                    <label for="final_station">Estacion Final</label>
                    <select class="form-control" name="final_station" id="final_station">
                            {{#each stopsList}}
                            <option value="{{properties.id}}">{{properties.name}}</option>
                            {{/each}}
                    </select>
                    <label for="">Fecha y Hora</label>
                    <input class="form-control" type="datetime-local" name="date" id="date"required>
                </div>
                <!-- Buttom -->
                <button type="submit" class="btn btn-success btn-block">Guardar</button>
            </form>
        </div>
    </div>
</div>