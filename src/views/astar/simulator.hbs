<div class="col-md-10 offset-md-1 box-body">
            <h1>Simulador</h1>
            
            <form action="/simulator" method="POST">
                <!-- Inputs -->

                <div class="row">
                    <div class="form-group col-md-12">
                        <div class="row">
                            <label for="initial_station">Estacion Inicial</label>
                            <select class="form-control col-md-12" name="initial_station" id="initial_station" required>
                                <optgroup label="___Azul___">
                                    {{#each stopsList}}
                                    <option value="{{properties.id}}">{{properties.name}}</option>
                                    {{/each}}
                                </optgroup>
                            </select>
                            <label for="final_station">Estacion Final</label>
                            <select class="form-control col-md-12" name="final_station" id="final_station" required>
                                <optgroup label="___Azul___">
                                    {{#each stopsList}}
                                    <option value="{{properties.id}}">{{properties.name}}</option>
                                    {{/each}}
                                </optgroup>
                            </select>
                        </div>

                    </div>
                    <!-- Buttom -->
                    <button type="submit" class="btn btn-success btn-block">Guardar</button>
                </div>

            </form>
</div>