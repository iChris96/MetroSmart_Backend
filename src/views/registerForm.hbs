

<div class="col-md-6 pt-5 offset-md-3">
    <div class="card shadow p-3 mb-5 bg-white rounded">
        <div class="card-body">
            <!-- Form -->
            <h1>MetroSmart</h1>
            <form action="/auth/register" method="POST" enctype="multipart/form-data">
                <!-- Inputs -->
                <div class="form-group">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">@</span>
                        </div>
                        <input type="email" class="form-control" placeholder="ingresa@mail.com" aria-label="ingresa@mail.com" name="email"
                            id="email" aria-describedby="basic-addon1">
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon2"><i class="fas fa-lock"></i></span>
                        </div>
                        <input type="password" class="form-control" placeholder="pass" aria-label="pass" name="pass"
                            id="pass" aria-describedby="basic-addon2">
                    </div>
                </div>
                <!-- Buttom -->
                <button type="submit" class="btn btn-success btn-block">Registrar</button>
                <h4>Usuarios Administradores</h4>
                <div style="max-height: 30vh; overflow-y: scroll" class="col-12">
                    {{#each users}}
                        <li>{{email}}</li>
                    {{/each }}
                </div>
            </form>
        </div>
    </div>
</div>
